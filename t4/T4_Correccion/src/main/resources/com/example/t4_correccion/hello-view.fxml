                    <items>
                      <MenuItem fx:id="menuDNI" mnemonicParsing="false" text="Por DNI" />
                        <MenuItem fx:id="menuReset" mnemonicParsing="false" text="Reiniciar" />
                    </items>
                  </Menu>
            </items>
          </Menu>
